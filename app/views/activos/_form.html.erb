<%= form_for(@activo) do |f| %>
  <%= render 'error_messages', target: @activo %>

  <div class="field">
    <%= f.label :clave %><br />
    <%= f.text_field :clave %>
  </div>
  <div class="field">
    <%= f.label :descripción %><br />
    <%= f.text_field :descripcion %>
  </div>
  <div class="field">
    <%= f.label :costo_revisión %><br />
    <%= f.text_field :costo_revision %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
