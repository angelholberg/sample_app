<%= form_for(@activo) do |f| %>
  <%= render 'error_messages', target: @activo %>

  <div class="field">
    <%= f.label :clave %>
    <%= f.text_field :clave %>
  </div>
  <div class="field">
    <%= f.label :descripción %>
    <%= f.text_field :descripcion %>
  </div>
  <div class="field">
    <%= f.label :costo_revisión %>
    <%= f.text_field :costo_revision %>
  </div>
  <div class="field">
    <%= f.label :area_id %>
    <%= f.select :area_id, Area.all.map { |area| [area.descripcion, area.id] },  {} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
