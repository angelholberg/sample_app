<h1>Listado de Activos</h1>

<table class="datatable table table-bordered">
  <thead>
    <tr>
      <th>Clave</th>
      <th>Descripcion</th>
      <th>Costo revision</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
  <% @activos.each do |activo| %>
    <tr>
      <td><%= activo.clave %></td>
      <td><%= activo.descripcion %></td>
      <td><%= activo.costo_revision %></td>
      <td>
        <div class="btn-group">
          <%= link_to 'Mostrar', activo, :class => 'btn' %>
          <%= link_to 'Editar', edit_activo_path(activo), :class => 'btn' %>
          <%= link_to 'Eliminar', activo, confirm: '¿Está usted seguro?', method: :delete, :class => 'btn btn-danger' %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />
<%= link_to 'Nuevo Activo', new_activo_path %>
