<div class="span9">
  <div class="span4 offset3 well">
    <h2 class="logo">Iniciar sesión</h2><br />
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="span5">
        <%= f.email_field :email, {:class => "span3", :placeholder => "Email"} %>
      </div>
      
      <div class="span5">
        <%= f.password_field :password, {:class => "span3", :placeholder => "Contraseña"} %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="span5">
          <%= f.check_box :remember_me, :class => "span1" %> <%= f.label :remember_me, "Recordarme", :class => "span1" %>
        </div>
      <% end -%>
      <div class="span4 offset1"> 
      <br />
        <%= f.submit "Iniciar sesión", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
