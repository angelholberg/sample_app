<div class="label label-info" align="center">
	<h1>Listado de Recepciones de activos</h1>
</div>
<br />

<table class="recepcion_activo table table-bordered">
  <thead>
    <tr>
      <th>Agente</th>
      <th>Vehiculo</th>
      <th>Fecha recepcion</th>
      <th>Descripcion</th>
      <th>Opciones</th>      
    </tr>
  </thead>

  <tbody>
  <% @recepciones_activos.each do |recepcion_activo| %>
    <tr>
      <td><%= recepcion_activo.agente.nombre %></td>
      <td><%= recepcion_activo.vehiculo.linea %></td>
      <td><%= recepcion_activo.fecha_recepcion %></td>
      <td><%= recepcion_activo.descripcion %></td>
      <td>
      	<div class="btn-group">
	      <%= link_to 'Mostrar', recepcion_activo, :class => 'btn' %>
	      <%= link_to 'Editar', edit_recepcion_activo_path(recepcion_activo), :class => 'btn' %>
	      <%= link_to 'Eliminar', recepcion_activo, confirm: '¿Está usted seguro?', method: :delete, :class => 'btn btn-danger' %>
	    </div>
	  </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />
<%= link_to 'Nueva Recepción de activo', new_recepcion_activo_path, :class => 'btn btn-primary' %>
<%= link_to 'PDF Recepciones', recepciones_activos_path(:format => 'pdf'), :class => 'btn btn-inverse' %>
