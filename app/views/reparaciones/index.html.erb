<div class="label label-info" align="center">
	<h1>Listado de Reparaciones</h1>
</div>
<br />

<table class="reparaciones table table-bordered">
  <thead>
    <tr>
      <th>Clave</th>
      <th>Descripción</th>
      <th>Opciones</th>      
    </tr>
  </thead>

  <tbody>
  <% @reparaciones.each do |reparacion| %>
    <tr>
      <td><%= reparacion.clave %></td>
      <td><%= reparacion.descripcion %></td>
      <td>
      	<div class="btn-group">
      		<%= link_to 'Mostrar', reparacion, :class => 'btn' %>
      		<%= link_to 'Editar', edit_reparacion_path(reparacion), :class => 'btn' %>
      		<%= link_to 'Eliminar', reparacion, confirm: '¿Está usted seguro?', method: :delete, :class => 'btn btn-danger' %>      		
      	</div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />
<%= link_to 'Nueva Reparación', new_reparacion_path, :class => 'btn btn-primary' %>
